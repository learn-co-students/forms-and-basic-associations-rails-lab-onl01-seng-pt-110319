<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :artist_name, "Artist's Name" %>
  <%= f.text_field :artist_name %>
  <br>
  <%= f.label "Select Genre" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, "id", "name") %>
  <br>

  <input type="text" id="song_notes_attributes_0_content" name="song[note_contents][]">
  <input type="text" id="song_notes_attributes_1_content" name="song[note_contents][]">
  <input type="text" id="song_notes_attributes_2_content" name="song[note_contents][]">

  <%= f.submit %>
<% end %>


