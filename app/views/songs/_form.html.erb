<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />

  <%= f.label "Select Genre" %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>

  <h3>Song Notes</h3>
  <%= f.fields_for :notes do |note|%>
  <%= note.label :note %>
  <%= note.text_area :content %>
  <br />
  <% end %>

  <%= f.submit %>
<% end %>